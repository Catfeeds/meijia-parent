<!--?xml version="1.0" encoding="UTF-8"?-->
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
    xmlns:aop="http://www.springframework.org/schema/aop"
    xmlns:tx="http://www.springframework.org/schema/tx"
    xsi:schemaLocation="
    http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans-2.0.xsd
    http://www.springframework.org/schema/tx
    http://www.springframework.org/schema/tx/spring-tx-2.0.xsd
    http://www.springframework.org/schema/aop
     http://www.springframework.org/schema/aop/spring-aop-2.0.xsd
     http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.1.xsd">

	<!--实现quartz中的job由spring注入 -->
	<bean id="jobFactory" class="com.simi.filters.MyJobFactory"></bean>
	<bean id="schedulerFactoryBean"
		class="org.springframework.scheduling.quartz.SchedulerFactoryBean">
		<!-- 通过applicationContextSchedulerContextKey属性配置spring上下文 -->
		<!-- <property name="applicationContextSchedulerContextKey"> <value>applicationContext</value>
			</property> -->
		<!-- 由于接口job属于quartz赋值 为了交给spring容器 job可以自定义 -->
		<property name="jobFactory" ref="jobFactory"></property>
		<property name="triggers">
			<list>
			</list>
		</property>

		<property name="startupDelay" value="60"/>
		<property name="overwriteExistingJobs" value="true" />
	</bean>
</beans>
